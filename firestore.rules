rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Leave requests: authenticated users can create, admins can update
    match /leaveRequests/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Notifications: authenticated users can read/create/update
    match /notifications/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Timetables, announcements, events, examSchedules
    match /{col}/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Nested notifications for faculties (legacy support)
    match /faculties/{facultyId}/notifications/{notifId} {
      allow read, write: if request.auth != null && (request.auth.uid == facultyId);
    }
  }
}
