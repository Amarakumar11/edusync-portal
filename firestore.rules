rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admins collection: only admins can read/write
    match /admins/{adminId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    // Faculties: faculty can read/write own, admin can read/write all
    match /faculties/{facultyId} {
      allow read, write: if request.auth != null && (request.auth.uid == facultyId || get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin');
    }
    // Timetables, leaveRequests, announcements, events, notifications, notes, examSchedules
    match /{col}/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    // Nested notifications for faculties
    match /faculties/{facultyId}/notifications/{notifId} {
      allow read, write: if request.auth != null && (request.auth.uid == facultyId || get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
